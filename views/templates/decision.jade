extends iframe-layout

block mainContent
    div(id='container')
        h3 Choice
        
        div(class="alert alert-danger", role="alert", id="badAlert", style="display:none;max-width:530px;")
            span Please make a choice.
            
        div(class="alert alert-success", role="alert", id="goodAlert", style="display:none;max-width:530px;")
            span You have submitted your choice.
            
        div
            span Select your preferred option.
        
        br

        div(class="panel panel-default", style="max-width:530px;")
            div(class="panel-heading") Allocation
            div(class="panel-body")
                table(style='width:100%;')
                    tr
                        td(style='font-weight:normal;') You receive:
                        each val, index in receive
                            td(style='cursor:hand;cursor:pointer;text-align:center;height:33px;width:30px;background:#fff;-webkit-border-radius: 5px 5px 0px 0px;-moz-border-radius: 5px 5px 0px 0px;border-radius: 5px 5px 0px 0px;', class='secondHoverclass' + index)= val
                    tr
                        td(style='border-top:1px solid black;border-bottom:1px solid black;')
                        - var i = 0;
                        while i < 9
                            td(style='cursor:hand;cursor:pointer;height:33px;border-top:1px solid black;border-bottom:1px solid black;text-align:center;background:#fff;', class='secondHoverclass' + i)
                                input(type='radio', name='position2', id='secondPos' + i, value=i++)
                    tr
                        td(style='font-weight:normal;') Other receives:
                        each val, index in send
                            td(style='cursor:hand;cursor:pointer;height:33px;text-align:center;background:#fff;-webkit-border-radius: 0px 0px 5px 5px;-moz-border-radius: 0px 0px 5px 5px;border-radius: 0px 0px 5px 5px;', class='secondHoverclass' + index)= val

        input(type='button', value='Continue', name='submitChoice', id='submitChoice', class='btn')

