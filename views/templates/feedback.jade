extends iframe-layout

block mainContent
    div(id='container')
        h3 Feedback
        
        div(class="panel panel-default", style="width:530px;")
            div(class="panel-heading") First choice
            div(class="panel-body")
                table(style='width:500px;')
                    tr
                        td(style='height:33px;font-weight:normal;') You receive:
                        each val, index in receive1
                            td(style='text-align:center;width:30px;background:#fff;color:#888;-webkit-border-radius: 5px 5px 0px 0px;-moz-border-radius: 5px 5px 0px 0px;border-radius: 5px 5px 0px 0px;', class='firstHoverclass' + index)= val
                    tr
                        td(style='border-top:1px solid black;border-bottom:1px solid black;')
                        - var i = 0;
                        while i < 9
                            td(style='height:33px;border-top:1px solid black;border-bottom:1px solid black;text-align:center;background:#fff;', class='firstHoverclass' + i++)

                    tr
                        td(style='height:33px;font-weight:normal;') Your partner receives:
                        each val, index in send1
                            td(style='text-align:center;background:#fff;color:#888;-webkit-border-radius: 0px 0px 5px 5px;-moz-border-radius: 0px 0px 5px 5px;border-radius: 0px 0px 5px 5px;', class='firstHoverclass' + index)= val
                

        div(class="panel panel-default", style="width:530px;")
            div(class="panel-heading") Second choice
            div(class="panel-body")
                table(style='width:500px;')
                    tr
                        td(style='height:33px;font-weight:normal;') You receive:
                        each val, index in receive2
                            td(style='text-align:center;width:30px;background:#fff;color:#888;-webkit-border-radius: 5px 5px 0px 0px;-moz-border-radius: 5px 5px 0px 0px;border-radius: 5px 5px 0px 0px;', class='secondHoverclass' + index)= val
                    tr
                        td(style='border-top:1px solid black;border-bottom:1px solid black;')
                        - var i = 0;
                        while i < 9
                            td(style='height:33px;border-top:1px solid black;border-bottom:1px solid black;text-align:center;background:#fff;', class='secondHoverclass' + i++) 
                    tr
                        td(style='height:33px;font-weight:normal;') Your partner receives:
                        each val, index in send2
                            td(style='text-align:center;background:#fff;color:#888;-webkit-border-radius: 0px 0px 5px 5px;-moz-border-radius: 0px 0px 5px 5px;border-radius: 0px 0px 5px 5px;', class='secondHoverclass' + index)= val

        div(id='colors', style='display:none;')
            p
                div(style='display:inline;') 
                     img(src='../pictures/yourChoice.gif')
                span  Your choice, 
                div(style='display:inline;') 
                     img(src='../pictures/partnersChoice.gif')
                span  Partner's choice, 
                div(style='display:inline;')
                     img(src='../pictures/sameChoice.gif')
                span  Both made the same choice

        div(id='colorsNF', style='display:none;')
            p
                div(style='background:#660;display:inline;') 
                     img(src='../pictures/yourChoice.gif')
                span  Your choice 
        
        br
        input(type='button', value='Continue', name='continue', id='continue', class='btn')
        
