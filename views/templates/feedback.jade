extends iframe-layout

block mainContent
    div(id='container')
        h3 Feedback
        
        div(id='feedbackSentence', style='display:none;')
            span You receive 
            //span(id='self1') 
            //|  and 
            span(id='self2') 
            |  from your own choice (top number) and 
            //span(id='other1') 
            //|  and 
            span(id='other2') 
            |  from the other's choice (bottom number).
            br
            br
            
        div(class="alert alert-danger", role="alert", id="error", style="display:none;width:530px;")
            strong No feedback. 
            span  There was an error during the choices stage so there is no feedback. However, the game should still work. Please continue.
                                   
    
        div(class="panel panel-default", style="width:530px;")
            div(class="panel-heading") Choice
            div(class="panel-body")
                table(style='width:500px;')
                    tr
                        td(style='height:33px;font-weight:normal;') You receive:
                        each val, index in receive2
                            td(class='feedbackTop', id='secondHoverTop' + index)= val
                    tr
                        td(style='border-top:1px solid black;border-bottom:1px solid black;')
                        - var i = 0;
                        while i < 9
                            td(class='feedbackMiddle', id='secondHoverMiddle' + i++) 
                    tr
                        td(style='height:33px;font-weight:normal;') Other receives:
                        each val, index in send2
                            td(class='feedbackBottom', id='secondHoverBottom' + index)= val

        div(id='colors', style='display:none;')
            p
                div(style='display:inline;') 
                     img(src='../pictures/yourChoice.gif')
                span  Your choice.
            p
                div(style='display:inline;') 
                     img(src='../pictures/partnersChoice.gif')
                span  Other's choice. 
            p
                div(style='display:inline;')
                     img(src='../pictures/sameChoice.gif')
                span  Same choice.

        div(id='colorsNF', style='display:none;')
            p
                div(style='background:#660;display:inline;') 
                     img(src='../pictures/yourChoice.gif')
                span  Your choice. 
                
                

        br
        input(type='button', value='Continue', name='continue', id='continue', class='btn')
        
